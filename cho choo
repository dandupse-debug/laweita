    <div class="container">
        <h2>SISTEMA_LAWEITA_V1</h2>
        <div id="status" class="status">ESPERANDO PAQUETE ENTRANTE...</div>
        <div id="output">...</div>
    </div>

    <script>
        window.onload = function() {
            const hash = window.location.hash.substring(1);
            if (!hash) return;
            try {
                const parts = hash.split('|');
                const encryptedMsg = decodeURIComponent(parts[0]);
                const password = decodeURIComponent(parts[1]);
                
                const bytes = CryptoJS.AES.decrypt(encryptedMsg, password);
                const originalText = bytes.toString(CryptoJS.enc.Utf8);
                
                if (!originalText) throw new Error();
                
                document.getElementById('output').innerText = originalText;
                document.getElementById('status').innerText = "ACCESO CONCEDIDO - MENSAJE DESCIFRADO";
            } catch (e) {
                document.getElementById('output').style.color = "red";
                document.getElementById('output').innerText = "ERROR: CLAVE O MENSAJE INV√ÅLIDO";
            }
        };
    </script>
</body>
