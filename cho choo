    <style>
        body { background: #050505; color: #00ff41; font-family: 'Courier New', monospace; display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0; }
        .container { border: 1px solid #00ff41; padding: 30px; border-radius: 5px; box-shadow: 0 0 15px #00ff4133; text-align: center; max-width: 400px; }
        #output { color: #fff; background: #111; padding: 15px; margin-top: 20px; border: 1px dashed #00ff41; min-height: 40px; word-break: break-all; }
        .status { font-size: 0.7rem; color: #008f11; margin-top: 10px; }
