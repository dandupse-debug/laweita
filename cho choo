        <div id="output"></div>
    </div>

    <script>
        window.onload = function() {
            const hash = window.location.hash.substring(1);
            if (!hash) return;
            try {
                const parts = hash.split('|');
                const bytes = CryptoJS.AES.decrypt(decodeURIComponent(parts[0]), decodeURIComponent(parts[1]));
                const content = bytes.toString(CryptoJS.enc.Utf8);
                
                if (!content) throw new Error();
                
                const output = document.getElementById('output');
                // Si el contenido empieza con http, mostramos una imagen
                if (content.match(/\.(jpeg|jpg|gif|png|webp)$/) != null || content.startsWith('http')) {
                    output.innerHTML = `<img src="${content}" alt="Mensaje Visual">`;
                } else {
                    output.innerText = content;
                }
                document.getElementById('status').innerText = "ARCHIVO DESCIFRADO";
            } catch (e) {
                document.getElementById('output').innerText = "ERROR: PAQUETE CORRUPTO";
            }
        };
    </script>
</body>
</html>
            const hash = window.location.hash.substring(1);
            if (!hash) return;
            try {
                const parts = hash.split('|');
                const encryptedMsg = decodeURIComponent(parts[0]);
                const password = decodeURIComponent(parts[1]);
                
                const bytes = CryptoJS.AES.decrypt(encryptedMsg, password);
                const originalText = bytes.toString(CryptoJS.enc.Utf8);
                
                if (!originalText) throw new Error();
                
                document.getElementById('output').innerText = originalText;
                document.getElementById('status').innerText = "ACCESO CONCEDIDO - MENSAJE DESCIFRADO";
            } catch (e) {
                document.getElementById('output').style.color = "red";
                document.getElementById('output').innerText = "ERROR: CLAVE O MENSAJE INV√ÅLIDO";
            }
        };
    </script>
</body>
